{
	"name": "wikimedia/mobile-formatter",
	"description": "Makes the HTML generated by MediaWiki's parser more mobile-friendly.",
	"type": "library",
	"license": "GPLv3",
	"authors": [
		{
			"name": "Sam Smith",
			"email": "git@samsmith.io"
		}
	],
	"require": {},
	"autoload": {
		"psr-4": {
			"Wikimedia\\MobileFormatter\\": "src/"
		}
	},
	"require-dev": {
		"jakub-onderka/php-parallel-lint": "^0.9.0",
		"mediawiki/mediawiki-codesniffer": "^0.3.0"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor",
			"phpcs --standard=vendor/mediawiki/mediawiki-codesniffer/MediaWiki --ignore=vendor -p .",
			"php vendor/wikimedia/mediawiki/tests/phpunit/phpunit.php --conf build/LocalSettings.php --bootstrap vendor/autoload.php tests/"
		]
	}
}
